<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1B1A1A"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    tools:context=".Main3Activity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:text="Francia
        Paris"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/redondeado1"
        android:textColor="#FFFFFF"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="Estados Unidos de America
                                    Nueva York"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="@drawable/redondeado2"
        android:textColor="#FFFFFF"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:text="Inglaterra
        Londres"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="@drawable/redondeado3"
        android:textColor="#FFFFFF"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:text="            India
        Mumbai"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="@drawable/redondeado4"
        android:textColor="#FFFFFF"/>
</LinearLayout>